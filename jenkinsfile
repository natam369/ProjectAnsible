node {
 try  {
  notify('Job Started') 
     
  stage('Git-Checkout') {
   git 'https://github.com/natam369/ProjectAnsible.git'
  }
    
	stage('Download package from JFrog') {
            def server= Artifactory.server 'Artifactory'
            def downloadSpec = """{
            "files": [
            {
                "pattern": "project/bikeshop-0.0.1-SNAPSHOT.war",
                "target": "./capstoneproject.war"
            }
            ]
            }"""
        server.download(downloadSpec)
    }
    
    stage('Deployment into production'){
 	 sh label: 'terraform', script: 'ansible-playbook -i /root/.jenkins/workspace/Terraform/inventory -u ubuntu --key /root/.ssh/bike.pem ./web-playbook.yaml'
     }
 notify('Job Completed')   
} catch (err) {
  notify("Error ${err}")
  currentBuild.result = 'FAILURE'
}
}



def notify(status){
    emailext (
	to: "natammegasachin369@gmail.com",
	subject: "${status}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
	 body: """<p>${status}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
	<p>Check console output at <a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>""",
		)
	}
